<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Круглое фото профиля -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="60dp"
            app:cardElevation="6dp"
            app:strokeWidth="2dp"
            android:layout_marginTop="40dp"
            app:strokeColor="#EEEEEE">

            <ImageView
                android:id="@+id/imageViewProfilePhoto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="#F0F0F0"
                android:contentDescription="Фото профиля" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Заголовок -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="👤 Ваш профиль"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#212121"
            android:fontFamily="sans-serif-medium"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Карточка с данными -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="20dp">

                <!-- ФИО -->
                <TextView
                    android:id="@+id/textViewFullName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ФИО: —"
                    android:textSize="17sp"
                    android:textColor="#212121"
                    android:layout_marginBottom="12dp"
                    android:drawablePadding="8dp"
                    android:drawableTint="#555555" />

                <!-- Email -->
                <TextView
                    android:id="@+id/textViewEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email: —"
                    android:textSize="17sp"
                    android:textColor="#212121"
                    android:layout_marginBottom="12dp"
                    android:drawablePadding="8dp"
                    android:drawableTint="#555555" />

                <!-- Дата рождения -->
                <TextView
                    android:id="@+id/textViewBirthDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Дата рождения: —"
                    android:textSize="17sp"
                    android:textColor="#212121"
                    android:layout_marginBottom="12dp"
                    android:drawablePadding="8dp"
                    android:drawableTint="#555555" />

                <!-- Адрес -->
                <TextView
                    android:id="@+id/textViewAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Адрес: —"
                    android:textSize="17sp"
                    android:textColor="#212121"
                    android:layout_marginBottom="12dp"
                    android:drawablePadding="8dp"
                    android:drawableTint="#555555" />

                <!-- Учебное заведение -->
                <TextView
                    android:id="@+id/textViewStudy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Учебное заведение: —"
                    android:textSize="17sp"
                    android:textColor="#212121"
                    android:layout_marginBottom="12dp"
                    android:drawablePadding="8dp"
                    android:drawableTint="#555555" />

                <!-- Телефоны -->
                <TextView
                    android:id="@+id/textViewPhones"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Телефоны: —"
                    android:textSize="17sp"
                    android:textColor="#212121"
                    android:layout_marginBottom="12dp"
                    android:drawablePadding="8dp"
                    android:drawableTint="#555555" />

                <!-- Соцсети -->
                <TextView
                    android:id="@+id/textViewSocials"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Соцсети: —"
                    android:textSize="17sp"
                    android:textColor="#212121"
                    android:layout_marginBottom="16dp"
                    android:drawablePadding="8dp"
                    android:drawableTint="#555555" />

                <!-- Индикатор заполненности -->
                <TextView
                    android:id="@+id/textViewFillPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Заполненность профиля: 0%"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp" />

                <ProgressBar
                    android:id="@+id/progressBarProfileFill"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="0"
                    android:layout_marginBottom="16dp"
                    android:progressTint="#4CAF50"
                    android:progressBackgroundTint="#E0E0E0"
                    android:indeterminate="false" />

                <Button
                    android:id="@+id/buttonLogout"
                    android:layout_width="316dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackground"
                    android:gravity="center"
                    android:text="🚪
Выйти"
                    android:textAllCaps="false"
                    android:textColor="#333333"
                    android:textSize="14sp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Индикатор загрузки (глобальный) -->
        <ProgressBar
            android:id="@+id/progressBarProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:indeterminateTint="#4CAF50"
            android:layout_marginTop="32dp" />

    </LinearLayout>

</ScrollView>